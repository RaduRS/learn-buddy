<svg width="300" height="200" viewBox="0 0 300 200" xmlns="http://www.w3.org/2000/svg">
  <!-- Background -->
  <rect width="300" height="200" fill="#87CEEB"/>
  
  <!-- Ground -->
  <rect x="0" y="150" width="300" height="50" fill="#90EE90"/>
  
  <!-- Round ball -->
  <g transform="translate(150, 120)">
    <!-- Ball shadow -->
    <ellipse cx="5" cy="35" rx="25" ry="8" fill="#00000020"/>
    
    <!-- Main ball -->
    <circle cx="0" cy="0" r="30" fill="#FF4500"/>
    
    <!-- Ball pattern/design -->
    <circle cx="0" cy="0" r="30" fill="none" stroke="#FF6347" stroke-width="2"/>
    
    <!-- Curved lines for soccer ball pattern -->
    <path d="M -20 -15 Q 0 -25 20 -15" stroke="#FF6347" stroke-width="2" fill="none"/>
    <path d="M -20 15 Q 0 25 20 15" stroke="#FF6347" stroke-width="2" fill="none"/>
    <path d="M -25 0 Q -15 -20 0 -10 Q 15 -20 25 0" stroke="#FF6347" stroke-width="2" fill="none"/>
    <path d="M -25 0 Q -15 20 0 10 Q 15 20 25 0" stroke="#FF6347" stroke-width="2" fill="none"/>
    
    <!-- Highlight to show roundness -->
    <ellipse cx="-8" cy="-8" rx="6" ry="4" fill="#FF7F50" opacity="0.7"/>
  </g>
  
  <!-- Some grass blades -->
  <g stroke="#228B22" stroke-width="2">
    <line x1="80" y1="150" x2="82" y2="145"/>
    <line x1="100" y1="150" x2="102" y2="143"/>
    <line x1="200" y1="150" x2="202" y2="144"/>
    <line x1="220" y1="150" x2="222" y2="146"/>
  </g>
  
  <!-- Sun -->
  <circle cx="250" cy="50" r="15" fill="#FFD700"/>
</svg>